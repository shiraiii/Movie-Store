@using DoAnMonHoc.Models;
@model List<Giohang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Areas/admin/Views/Shared/_LayoutGiohang.cshtml";
}
<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table align="center" border="1" width="90%" >
    <tr style="text-align:center; font-weight:bold">
        <td> Mã Phim </td>
        <td> Tên Phim </td>
        <td> Ảnh bìa </td>
        <td> Số lượng </td>
        <td> Đơn giá </td>
        <td> Thành tiền </td>
        <td width="50px"></td>
        <td width="50px"></td>
        <td width="50px"></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold">
            <td>@item.iMaphim </td>
            <td>@item.sTenPhim</td>
            <td><img src="~/assets/img/@item.sAnhbia" width="150"></td>
            @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMaSp = item.iMaphim}))
            {
                <td>
                    <input type="number" min="1" name="txtSoluong" value="@item.iSoLuong" style="background-color:yellow" />
                </td>
                <td>@String.Format("{0:0,0}", item.dDongia) </td>
                <td>@String.Format("{0:0,0}", item.dThanhtien) </td>
                <td><a href="@Url.Action("Details","MovieStore", new { id = item.iMaphim })"> Chi Tiết </a></td>
                <td>@Html.ActionLink("Xóa", "XoaGioHang", new { @iMasp = item.iMaphim })</td>
                <td><input type="submit" value="Cập Nhật" /></td>
            }
        </tr>
    }
    <tr style="font-weight: bold; text-align:right; color:red">
        <td colspan="4"> Số lượng phim: @ViewBag.Tongsoluong </td>
        <td colspan="5"> Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ </td>
    </tr>
    <tr style="font-weight: bold; color:blue; text-align:right ">
        <td colspan="9">
            @Html.ActionLink("Xóa Giỏ Hàng", "XoaTatcaGiohang")
        </td>
        
    </tr>
    <tr style="font-weight: bold; color:aqua; text-align:right ">
        <td colspan="9" align="center">
            @Html.ActionLink("ĐẶT HÀNG", "DatHang", "GioHang")
        </td>
        
    </tr>
</table>

