@model IEnumerable<DoAnMonHoc.Models.PHIM>
@{
    ViewBag.Title = "SPTheochude";
    Layout = "~/Areas/admin/Views/Shared/_LayoutUser.cshtml";
}


<h3 style="text-align:center; color:red">PHIM THEO THỂ LOẠI</h3>
<div class="movie-group">
    @foreach (var sp in Model)
    {
        <div class="main-movie col-md-4">
            <div class="article-movie-home">
                <a href="@Url.Action("Details","MovieStore", new {id = sp.MAPHIM})">
                    <img src="~/assets/img/@sp.ANHBIA"
                         alt="@sp.TENPHIM"
                         class="main-pic" />
                </a>
                <div class="description-hover overlay">
                    <div class="movies-content">
                        <i class="icon-c18"></i>
                        <div class="group">
                            <a href="@Url.Action("ThemGiohang", "GioHang", new { @iMaPhim= sp.MAPHIM, @strURL=Request.Url.ToString() })" class="btn secondary-white">
                                THÊM VÀO GIỎ HÀNG
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="movie-title">
                <h4 class="upper-text">@sp.TENPHIM</h4>
                <h4 class="under-text">@sp.TENPHU</h4>
            </div>
        </div>
    }
</div>
